<!DOCTYPE html>
<html>
<head>

  <link rel="stylesheet" href="/styles/bootstrap.css">
  <link rel="stylesheet" href="/styles/angular-toastr.css">
  <link rel="stylesheet" href="/styles/importer.css">
  <link rel="stylesheet" href="/styles/app.css">

</head>
<body ng-app="loginMod" ng-controller="loginCtrl">
<div class="col-lg-4 col-lg-offset-4">
  <div class="login-box">
    <div class="row">
      <div class="col-lg-12">
        <h2>UserAuth</h2>
        <p>Please log in or create an account</p>
        <form ng-submit="runLogin()">
          <div class="row">
            <div class="col-lg-12">
              <input ng-model="email"  type="email" name="email" placeholder="Email Address" required>
            </div>
            <div class="col-lg-12">
              <input ng-model="password" ng-maxlength="20" type="password" name="password" placeholder="Password" required>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-7">
              <input type="submit" class="btn btn-primary submit" value="Log In">
            </div>
            <div class="col-lg-5">
              <a class="btn btn-default" href="/signup">Create Account</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script src="/js/dependencies/sails.io.js"></script>
<script src="/js/dependencies/jquery-1.11.3.js"></script>
<script src="/js/dependencies/angular.min.js"></script>
<script src="/js/dependencies/angular-toastr.min.js"></script>
<script src="/js/dependencies/angular-toastr.tpls.min.js"></script>
<script src="/js/dependencies/angular-route.min.js"></script>
<script src="/js/dependencies/bootstrap.js"></script>
<script src="/js/public/signup/signupMod.js"></script>
<script src="/js/public/signup/signupCtrl.js"></script>
<script src="/js/public/login/loginMod.js"></script>
<script src="/js/public/login/loginCtrl.js"></script>
</body>
</html>
